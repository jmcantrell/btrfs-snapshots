#!/usr/bin/env bash

# Show that btrfs errors and exit status are reported.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

export BTRFS_SNAPSHOTS_PROFILES_DIR=$TEMP_DIR/profiles.d
export BTRFS_SNAPSHOTS_TIMESTAMP=2001-01-01T00:00:00Z

profile_name=foo
subvolume=$TEMP_DIR/subvolume
snapshots=$TEMP_DIR/snapshots

mkdir -p "$BTRFS_SNAPSHOTS_PROFILES_DIR" "$subvolume"

# Create a snapshot so there is a reason for calling btrfs during the prune.
mkdir -p "$snapshots/$BTRFS_SNAPSHOTS_TIMESTAMP"

cat >"$BTRFS_SNAPSHOTS_PROFILES_DIR/$profile_name.conf" <<-EOF
SUBVOLUME=$subvolume
SNAPSHOTS=$snapshots
EOF

btrfs() {
    return 5
}

export -f btrfs

for action in create prune; do
    printf -v stderr "%s\n" \
        "$(format "ERROR: $TEXT_BTRFS_FAILED" STATUS=5)" \
        "$(format "ERROR: $TEXT_ACTION_FAILED" ACTION="$action")"

    assert_failure assert_stderr "$stderr" \
        btrfs-snapshots -p "$profile_name" "$action"
done
