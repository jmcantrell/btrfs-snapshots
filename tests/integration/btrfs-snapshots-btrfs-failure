#!/usr/bin/env bash

# Show that btrfs errors and exit status are reported.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

profile_name=foo
profiles_dir=$ETC_DIR/profiles.d

subvolume=$TEMP_DIR/subvolume
snapshots=$TEMP_DIR/snapshots

mkdir -p "$profiles_dir" "$subvolume"

# Create a snapshot so there is a reason for calling btrfs during the prune.
mkdir -p "$snapshots/$TIMESTAMP"

cat >"$profiles_dir/$profile_name.conf" <<-EOF
SUBVOLUME=$subvolume
SNAPSHOTS=$snapshots
EOF

btrfs() {
    return 5
}

export -f btrfs

for action in create prune; do
    printf -v stderr "%s\n" \
        "$(format "ERROR: $TEXT_BTRFS_FAILED" STATUS=5)" \
        "$(format "ERROR: $TEXT_ACTION_FAILED" ACTION="$action")"

    assert_failure assert_stderr "$stderr" \
        btrfs-snapshots -p "$profile_name" "$action"
done
