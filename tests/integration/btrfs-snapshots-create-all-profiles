#!/usr/bin/env bash

# Show that no profile selection is equivalent to selecting all of them when
# creating snapshots.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

profile_dir=$ETC_DIR/profile.d

mkdir -p "$profile_dir"

profile_names=(a b c)
snapshots=()
stdout_lines=()

for i in "${!profile_names[@]}"; do
    name=${profile_names[i]}
    subvolume_dir=$TEMP_DIR/subvolume/$name
    snapshots_dir=$TEMP_DIR/snapshots/$name
    snapshot=$snapshots_dir/$TIMESTAMP
    snapshots+=("$snapshot")

    mkdir -p "$subvolume_dir"
    echo -n "$name" >"$subvolume_dir"/marker

    printf "%s\n" \
        SUBVOLUME="$subvolume_dir" \
        SNAPSHOTS="$snapshots_dir" \
        >"$profile_dir/$name.conf"

    stdout_lines+=("$(
        format "$TEXT_BTRFS_CREATE" \
            SUBVOLUME="$subvolume_dir" \
            SNAPSHOT="$snapshot"
    )")
done

printf -v stdout "%s\n" "${stdout_lines[@]}"

assert_success assert_stdout "$stdout" \
    btrfs-snapshots create

for i in "${!profile_names[@]}"; do
    marker=${snapshots[i]}/marker
    assert_file "$marker"
    assert_file_content "$marker" "${profile_names[i]}"
done
