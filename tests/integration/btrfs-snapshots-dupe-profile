#!/usr/bin/env bash

# Show that requesting the same profile at the command line multiple times will
# only perform the action once.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

export BTRFS_SNAPSHOTS_PROFILES_DIR=$TEMP_DIR/profiles.d

subvolume=$TEMP_DIR/subvolume
snapshots=$TEMP_DIR/snapshots
profile_name=foo

mkdir -p "$BTRFS_SNAPSHOTS_PROFILES_DIR"

cat >"$BTRFS_SNAPSHOTS_PROFILES_DIR/$profile_name.conf" <<-EOF
SUBVOLUME=$subvolume
SNAPSHOTS=$snapshots
EOF

# Notice that there is only one message expected.
printf -v message "%s\n" \
    "$(format "WARNING: $TEXT_CREATE_SUBVOLUME_MISSING" PROFILE_NAME="$profile_name")"

# Notice that the same profile is requested twice.
assert_success assert_stderr "$message" \
    btrfs-snapshots -p "$profile_name" -p "$profile_name" create
