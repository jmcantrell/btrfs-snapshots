#!/usr/bin/env bash

# Show that btrfs errors and exit status are reported.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

subvolume=$TEMP_DIR/subvolume
snapshots=$TEMP_DIR/snapshots
profile_dir=$TEMP_DIR/profiles
profile_name=foo

mkdir -p "$profile_dir"

create_profile "$subvolume" "$snapshots" >"$profile_dir/$profile_name.conf"

export BTRFS_SNAPSHOTS_PROFILE_DIR=$profile_dir

# Notice that there is only one message expected.
printf -v message "%s\n" "$(format "$TEXT_PROFILE_MISSING" PROFILE_NAME="$profile_name")"

# Notice that the same profile is requested twice.
assert_success assert_stderr "$message" btrfs-snapshots -p "$profile_name" -p "$profile_name" create
