#!/usr/bin/env bash

# Show that `btrfs-snapshots` displays help when requested.

set -euo pipefail

. "$LIB_DIR"/init.bash
. "$TESTS_LIB_DIR"/init.bash

pattern=".*Usage:.*Arguments:.*Actions:.*Environment:.*"

assert_success assert_stdout_match "$pattern" \
    btrfs-snapshots -h

assert_success assert_stdout_match "$pattern" \
    btrfs-snapshots --help
