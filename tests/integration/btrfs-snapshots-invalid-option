#!/usr/bin/env bash

# Show that `btrfs-snapshots` complains about invalid options.

set -euo pipefail

. "$LIB_DIR"/init.bash
. "$TESTS_LIB_DIR"/init.bash

option=-x

printf -v stderr \
    "$TEXT_OPTION_INVALID\n" \
    "$option"

assert_stderr "$stderr" assert_failure \
    btrfs-snapshots "$option"
