#!/usr/bin/env bash

# Show that `btrfs-snapshots` complains when a profile does not exist.

set -euo pipefail

source "$LIB_DIR"/init.bash
source "$TESTS_LIB_DIR"/init.bash

stderr="profiles do not exist: 'foo' 'bar'"

for action in create prune; do
    assert_failure assert_stderr_match "$stderr" \
        btrfs-snapshots "$action" foo bar
done
