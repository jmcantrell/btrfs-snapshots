#!/usr/bin/env bash

# Show that multiple profiles can be selected when pruning snapshots.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

profile_dir=$ETC_DIR/profile.d

mkdir -p "$profile_dir"

profile_names=(a b c)
snapshots=()

for profile_name in "${profile_names[@]}"; do
    subvolume_dir=$TEMP_DIR/subvolume/$profile_name
    snapshots_dir=$TEMP_DIR/snapshots/$profile_name
    snapshot=$snapshots_dir/$TIMESTAMP
    snapshots+=("$snapshot")

    mkdir -p "$snapshot"

    printf "%s\n" \
        SUBVOLUME="$subvolume_dir" \
        SNAPSHOTS="$snapshots_dir" \
        >"$profile_dir/$profile_name.conf"
done

selection=(0 2)
options=()
stdout_lines=()

for i in "${selection[@]}"; do
    options+=(-p "${profile_names[i]}")
    stdout_lines+=("$(format "$TEXT_BTRFS_DELETE" SNAPSHOT="${snapshots[i]}")")
done

printf -v stdout "%s\n" "${stdout_lines[@]}"

assert_success assert_stdout "$stdout" \
    btrfs-snapshots "${options[@]}" prune

for i in "${selection[@]}"; do
    assert_no_directory "${snapshots[i]}"
done

# Make sure the non-selected profile kept its snapshot.
assert_directory "${snapshots[1]}"
