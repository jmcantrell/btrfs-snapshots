#!/usr/bin/env bash

# Show that `load_profile` rejects a default `SNAPSHOTS` setting that does not
# contain a placeholder.

set -euo pipefail

. "$LIB_DIR"/init.bash
. "$TESTS_LIB_DIR"/init.bash

profile_file=$PROFILES_DIR/foo.conf

mkdir -p "$(dirname "$profile_file")"

printf "%s=%q\n" \
    SUBVOLUME "$TEMP_DIR" \
    >"$profile_file"

printf "%s=%q\n" \
    SNAPSHOTS "$TEMP_DIR" \
    >"$DEFAULTS_FILE"

printf -v stderr \
    "invalid defaults: %q\n- SNAPSHOTS is missing the %%s placeholder\n" \
    "$DEFAULTS_FILE" "$TEMP_DIR"

assert_stderr "$stderr" assert_failure \
    load_profile "$profile_file"
