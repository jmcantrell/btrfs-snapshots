#!/usr/bin/env bash

# Show that errors loading the defaults file will be reported.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

export PROFILE_FILE=$TEMP_DIR/profile.conf
export DEFAULTS_FILE=$TEMP_DIR/defaults.conf

cat >"$PROFILE_FILE" <<-EOF
SUBVOLUME=$TEMP_DIR
SNAPSHOTS=$TEMP_DIR
EOF

echo "return 1" >"$DEFAULTS_FILE"

printf -v stderr "%s\n" \
    "$(format "ERROR: $TEXT_DEFAULTS_FAILED" DEFAULTS_FILE)"

assert_failure assert_stderr "$stderr" \
    load_profile
