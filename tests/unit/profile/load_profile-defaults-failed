#!/usr/bin/env bash

# Show that errors while loading the defaults file will be reported.

set -euo pipefail

. "$LIB_DIR"/init.bash
. "$TESTS_LIB_DIR"/init.bash

export PROFILE_FILE=$CONFIG_DIR/foo.conf

defaults_file=$CONFIG_DIR/defaults.conf

mkdir -p "$CONFIG_DIR"

printf "%s=%s\n" \
    SUBVOLUME "$TEMP_DIR" \
    SNAPSHOTS "$TEMP_DIR" \
    >"$PROFILE_FILE"

printf "return 1\n" >"$defaults_file"

printf -v stderr \
    "$TEXT_SOURCE_FAILED\n" \
    "$defaults_file"

assert_stderr "$stderr" assert_failure \
    load_profile
