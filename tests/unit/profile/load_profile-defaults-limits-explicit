#!/usr/bin/env bash

# Show that default limit values can be set.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

export PROFILE_FILE=$ETC_DIR/foo.conf

mkdir -p "$ETC_DIR"

printf "%s=%s\n" \
    SUBVOLUME "$TEMP_DIR" \
    SNAPSHOTS "$TEMP_DIR" \
    >"$PROFILE_FILE"

# Create random defaults for every limit.
limits=()
for event_name in "${EVENT_NAMES[@]}"; do
    limit=$((1 + RANDOM))
    limits+=("$limit")

    printf "%s=%d\n" \
        "$(get_limit_variable "$event_name")" \
        "$limit" \
        >>"$ETC_DIR"/defaults.conf
done

assert_success assert_no_output \
    load_profile

# Ensure the profile will be using the previously set defaults.
for i in "${!EVENT_NAMES[@]}"; do
    assert_equal "$(get_limit "${EVENT_NAMES[i]}")" "${limits[i]}"
done
