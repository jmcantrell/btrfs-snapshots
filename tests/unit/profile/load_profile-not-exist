#!/usr/bin/env bash

# Show that non-existent profile files cause an error.

set -eu

. "$LIB_DIR"/init.sh
. "$TESTS_LIB_DIR"/init.sh

export PROFILE_FILE=/path/to/foo.conf

printf -v stderr "%s\n" \
    "$(format "ERROR: $TEXT_PROFILE_NOT_EXIST" PROFILE_NAME=foo)"

assert_failure assert_stderr "$stderr" \
    load_profile
