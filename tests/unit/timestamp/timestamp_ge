#!/usr/bin/env bash

# Show that `timestamp_ge` only returns success when the first timestamp occurs
# later than or at the same time as the second timestamp.

set -euo pipefail

. "$LIB_DIR"/init.bash
. "$TESTS_LIB_DIR"/init.bash

assert_success assert_no_output \
    timestamp_ge "$TIMESTAMP" "$TIMESTAMP"

later=$(timestamp --date="$TIMESTAMP + 1 second")

assert_success assert_no_output \
    timestamp_ge "$later" "$TIMESTAMP"

assert_failure assert_no_output \
    timestamp_ge "$TIMESTAMP" "$later"
